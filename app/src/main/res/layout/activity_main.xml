<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/fourthRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/thirdRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/fourButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:tag="4"
            android:text="4"
            android:textSize="@dimen/button_text" />

        <Button
            android:id="@+id/fiveButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:tag="5"
            android:text="5"
            android:textSize="@dimen/button_text" />

        <Button
            android:id="@+id/sixButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:tag="6"
            android:text="6"
            android:textSize="@dimen/button_text" />

        <Button
            android:id="@+id/multiplyButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:tag="multiply"
            android:text="@string/multiply"
            android:textSize="@dimen/button_text"
            app:cornerRadius="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/secondRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fourthRow">

        <Button
            android:id="@+id/oneButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:tag="1"
            android:text="1"
            android:textSize="@dimen/button_text" />

        <Button
            android:id="@+id/twoButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:tag="2"
            android:text="2"
            android:textSize="@dimen/button_text" />

        <Button
            android:id="@+id/threeButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:tag="3"
            android:text="3"
            android:textSize="@dimen/button_text" />

        <Button
            android:id="@+id/plusButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:tag="plus"
            android:text="@string/plus"
            android:textSize="@dimen/button_text"
            app:cornerRadius="1dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/firstRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thirdRow">

        <Button
            android:id="@+id/decimalButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:tag="."
            android:text="."
            android:textSize="@dimen/button_text"
            />

        <Button
            android:id="@+id/zeroButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:tag="0"
            android:text="0"
            android:textSize="@dimen/button_text"
            />

        <Button
            android:id="@+id/percentButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:tag="percent"
            android:text="@string/percent"
            android:textSize="@dimen/button_text"
            app:cornerRadius="1dp" />

        <Button
            android:id="@+id/minusButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:tag="minus"
            android:text="@string/minus"
            android:textSize="@dimen/button_text"
            app:cornerRadius="1dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/firstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/secondRow">

        <Button
            android:id="@+id/clearButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginEnd="@dimen/margin_x_row1"
            android:layout_weight="1"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:tag="clear"
            android:text="C"
            android:textSize="@dimen/button_text"
            app:cornerRadius="1dp" />

        <Button
            android:id="@+id/equalsButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginStart="@dimen/margin_x_row1"
            android:layout_marginEnd="@dimen/margin_x"
            android:layout_weight="1"
            android:fontFamily="@font/fa_solid_900"
            android:paddingStart="@dimen/padding_x"
            android:paddingEnd="@dimen/padding_x"
            android:tag="equals"
            android:text="@string/equals"
            android:textSize="@dimen/button_text"
            app:cornerRadius="1dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
